@model VidlyProject.Models.Movie

@{
  ViewBag.Title = "Movie Details";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
  <li>Genre: <strong>@Model.Genre.Name</strong></li>
  <li>Release Date: <strong>@String.Format("{0:d}", Model.ReleaseDate)</strong ></ li >
  <li>Date Added: <strong>@String.Format("{0:d}", Model.DateAdded)</strong ></ li >
  <li>Number In Stock: <strong>@Model.NumberInStock</strong ></ li >
</ul>

